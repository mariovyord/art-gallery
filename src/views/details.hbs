{{#with pub}}
<section id="details-page">
	<h1>Details</h1>
	<article class="details-card">
		<article class="details-card-text">
			<h2>Title:<br> {{title}}</h2>
			<h3>Author: {{author.username}}</h3>
			<h3>Painting technique: {{'painting technique'}}</h3>
			<h3>Certificate of authenticity: {{'certificate of authenticity'}}</h3>
			{{/with}}

			<!-- If there is no registered user, do not display buttons-->
			{{#if hasUser}}
			<div class="buttons">
				<!-- Only for registered user and author of the publication -->
				{{#if isOwner}}
				<a href="/publication/edit/{{pub._id}}" class="btn-edit">Edit</a>
				<a href="/publication/delete/{{pub._id}}" class="btn-delete">Delete</a>
				{{else}}
				<!-- logged in user who has not yet shared the publication-->
				{{#if hasShared}}
				<p class="shared-pub">You already shared this publication</p>
				{{else}}
				<a href="/publication/share/{{pub._id}}" class="btn-share">Share publication</a>
				{{/if}}
				{{/if}}
			</div>
			{{/if}}
			{{#with pub}}
		</article>

		<article class="details-card-image">
			<img src="{{'art picture'}}" alt="art-image2">
		</article>

	</article>
</section>
{{/with}}